extends ../shared/template
block content
    h2 Your offer: #{auction.name}
    .row
      .col-xs-6
        img.img-rounded(src="#{auction.itemForOffer.photo}")
      .col-xs-6
        .row 
          .col-xs-12: h4 Description
        .row
          .col-xs-12 #{auction.itemForOffer.description}
    br
    if auction.bids.length
      form(role='form' method='post' id='acceptBid' action='/auction/#{auction._id}/accept')
      each bid, index in auction.itemsForBid
        .panel.panel-primary.bid
          .panel-heading
            h3 Bid ##{index + 1} #{bid.name}
          .panel-body.bidBody
            .thumbnail(style="background-image: url(#{bid.photo});")
            h3 Description
            .description= bid.description
          .panel-heading.acceptBid
            .input-group
                span.input-group-addon
                  label Swap for this item!
                  input.form-control(type='radio' value='#{bid._id}' name='itemId')
          button.swap.btn.btn-success(type='submit' form='acceptBid') Swap!



    else
      .row
        .col-xs-12: h2 There are currently no bids on your item...


block scripts
  script(src='/js/user/seller-show.js')