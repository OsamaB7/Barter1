extends ../shared/template
block content
    h2 Auction For: #{auction.itemForOffer.name}
    .row
      .col-xs-6
        img.img-rounded(src="#{auction.itemForOffer.photo}")
      .col-xs-6
        a.btn.btn-warning.btn-lg(href='/message/#{auction.itemForOffer.ownerId}/send') Message Seller 
        .row 
          .col-xs-12: h4 Description
        .row
          .col-xs-12 #{auction.itemForOffer.description}

    if auction.bids.length
      each bid, index in auction.itemsForBid
        .panel.panel-primary.bid
          .panel-heading
            h3 Bid ##{index + 1} #{bid.name}
          .panel-body.bidBody
            .thumbnail(style="background-image: url(#{bid.photo});")
            h4 Owner: #{auction.itemOwners[index].alias}
            h3 Description
            .description= bid.description
      if items.length
        form(method='post' action='/auction/#{auction._id}/bid')
          select(name='itemId')
            each item in items
              option(value='#{item._id}')= item.name
          button.btn.btn-default(type='submit') Place Bid
      else 
        .row 
          .col-xs-12: h2 You have nothing to bid. Click 'Manage Items' to add some!


    else
      .row
        .col-xs-12: h2 There are currently no bids on this item...

block scripts
